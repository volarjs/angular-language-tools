{
	"private": true,
	"name": "vscode-html1",
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "https://github.com/volarjs/langauge-tools-starter.git",
		"directory": "packages/vscode-html1"
	},
	"displayName": "HTML1 Language Features",
	"description": "HTML1 Language Features",
	"author": "volarjs",
	"publisher": "volarjs",
	"engines": {
		"vscode": "^1.67.0"
	},
	"activationEvents": [
		"onLanguage:html1"
	],
	"main": "client",
	"contributes": {
		"languages": [
			{
				"id": "html1",
				"extensions": [
					".html1"
				]
			}
		]
	},
	"scripts": {
		"prebuild": "cd ../.. && npm run build",
		"build": "node scripts/build -- --minify",
		"watch": "npm run build -- --watch",
		"pack": "npm run build && vsce package --pre-release",
		"release": "npm run build && vsce publish --pre-release"
	},
	"devDependencies": {
		"@html1-language-tools/language-server": "workspace:*",
		"@types/vscode": "1.67.0",
		"@volar/language-server": "1.0.21",
		"@volar/vscode-language-client": "1.0.21",
		"esbuild": "latest",
		"vsce": "latest",
		"vscode-languageclient": "^8.0.2"
	}
}
